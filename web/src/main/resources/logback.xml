<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">

    <property name="DEV_HOME" value="/opt/java/" />

    <appender name="out" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>[%thread] %d{HH:mm:ss} %highlight(%-5level) %cyan(%logger{15}) - %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="file"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${DEV_HOME}/info/xh_web.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %-5level %d{yyyy-MM-dd HH:mm:ss} [%thread] %logger{36} - %msg%n
            </Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${DEV_HOME}/info/archived/xh_web.%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <appender name="file_error"
              class="ch.qos.logback.core.FileAppender">
        <file>${DEV_HOME}/error/xh_web_error.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %-5level %d{yyyy-MM-dd HH:mm:ss} [%thread] %logger{36} - %msg%n
            </Pattern>
        </encoder>
    </appender>

    <loger name="com.xiaohe66.web" level="error" additivity="false">
        <appender-ref ref="file_error"/>
    </loger>

    <root level="debug">
        <appender-ref ref="out"/>
        <appender-ref ref="file" />
    </root>

</configuration>
