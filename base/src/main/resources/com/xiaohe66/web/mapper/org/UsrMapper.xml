<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaohe66.web.org.dao.UsrDao">

    <insert id="add" parameterType="Usr" keyProperty="id" useGeneratedKeys="true" keyColumn="id">
        insert into xh_web_org_usr(usr_name,usr_pwd)values(#{usrName},#{usrPwd})
    </insert>

    <select id="findById" resultType="Usr">
        select * from xh_web_org_usr where id = #{id}
    </select>

    <select id="findByUsrName" resultType="Usr">
        select * from xh_web_org_usr where usr_name = #{usrName}
    </select>

    <select id="findByUsrNameAndPwd" resultType="Usr">
        select * from xh_web_org_usr where usr_name = #{usrName} and usr_pwd = #{usrPwd}
    </select>

    <insert id="addUsrRoles">
        insert into xh_web_security_usr_role(usr_id,role_id)
        values
        <foreach collection="list" separator="," item="item">
            (#{usrId},#{item})
        </foreach>
    </insert>

</mapper>