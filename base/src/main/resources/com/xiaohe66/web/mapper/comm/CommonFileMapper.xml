<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaohe66.web.comm.dao.CommonFileDao">

    <insert id="add" parameterType="CommonFile" keyProperty="id" useGeneratedKeys="true" keyColumn="id">
        insert into xh_web_comm_file(md5,file_url,file_byte)
        values(#{md5},#{fileUrl},#{fileByte})
    </insert>

    <select id="findById" resultType="CommonFile">
        select * from xh_web_comm_file where id = #{id}
    </select>

    <select id="findByMd5" resultType="CommonFile">
        select * from xh_web_comm_file where md5 = #{md5} and file_url is not null
    </select>

    <update id="updateById" parameterType="CommonFile">
        update xh_web_comm_file
        <set>
            <if test="endTime != null">
                end_time = #{endTime},
            </if>
            <if test="fileUrl != null">
                file_url = #{fileUrl},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>