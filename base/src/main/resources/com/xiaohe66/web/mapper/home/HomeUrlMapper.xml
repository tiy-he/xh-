<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaohe66.web.home.dao.HomeUrlDao">

    <insert id="add" parameterType="HomeUrl" keyProperty="id" useGeneratedKeys="true" keyColumn="id">
        insert into xh_web_home_url(create_id,update_id,url_name,url_add,url_desc,url_img,secret_level)
        values (#{createId},#{createId},#{urlName},#{urlAdd},#{urlDesc},#{urlImg},#{secretLevel})
    </insert>

    <insert id="addAll" parameterType="HomeUrl" keyProperty="id" useGeneratedKeys="true" keyColumn="id">
        insert into xh_web_home_url(create_id,update_id,url_name,url_add,url_desc,url_img,secret_level)values
        <foreach collection="list" separator="," item="item">
            (#{item.createId},#{item.createId},#{item.urlName},#{item.urlAdd},#{item.urlDesc},#{item.urlImg},#{item.secretLevel})
        </foreach>
    </insert>

    <select id="findByParam" resultType="HomeUrl">
        select * from xh_web_home_url
        <where>
            <if test="param.createId != null">
                and create_id = #{param.createId}
            </if>
            <if test="param.secretLevel != null">
                and secret_level = #{param.secretLevel}
            </if>
        </where>
    </select>

</mapper>