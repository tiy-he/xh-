<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaohe66.web.text.dao.ArticleCategoryLinkDao">

    <!--todo:这里返回主键会报错-->
    <!--<insert id="addAll" parameterType="ArticleCategoryLink" keyProperty="id" useGeneratedKeys="true" keyColumn="id">-->
    <insert id="addAll" parameterType="ArticleCategoryLink">
        insert into xiaohe66_web_text_article_category_link(article_id,category_id)values
        <foreach collection="list" item="item" separator=",">
            (#{item.articleId},#{item.categoryId})
        </foreach>
    </insert>

    <delete id="delByParamOfHard">
        delete from xiaohe66_web_text_article_category_link
        <where>
            and article_id = #{param.articleId}
            <if test="param.categoryId != null">
                and category_id = #{param.categoryId}
            </if>
        </where>
    </delete>

</mapper>