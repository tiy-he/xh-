<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaohe66.web.file.dao.CommonFileDao">

    <insert id="add" parameterType="CommonFile" keyProperty="id" useGeneratedKeys="true" keyColumn="id">
        insert into xh_web_comm_file(md5)
        values(#{md5})
    </insert>

    <select id="findById" resultType="CommonFile">
        select * from xh_web_comm_file where id = #{id}
    </select>

    <select id="findByMd5" resultType="CommonFile">
        select * from xh_web_comm_file where md5 = #{md5}
    </select>

    <update id="updateById" parameterType="CommonFile">
        update xh_web_comm_file
        <set>
            <if test="endTime != null">
                end_time = #{endTime},
            </if>
            <if test="fileUrl != null">
                file_url = #{fileUrl},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="updateByParam" parameterType="CommonFile">
        update xh_web_comm_file
        <set>
            <if test="param.endTime != null">
                end_time = #{param.endTime},
            </if>
            <if test="param.fileUrl != null">
                file_url = #{param.fileUrl},
            </if>
            <if test="param.fileByte != null">
                file_byte = #{param.fileByte},
            </if>
        </set>
        <where>
            <if test="param.md5 != null">
                and md5 = #{param.md5}
            </if>
        </where>
    </update>

</mapper>