<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaohe66.web.file.dao.CommonFileTmpDao">

    <insert id="add" parameterType="CommonFileTmp" keyProperty="id" useGeneratedKeys="true" keyColumn="id">
        insert into xh_web_comm_file_tmp(md5,file_url,file_byte,chunk)
        values(#{md5},#{fileUrl},#{fileByte},#{chunk})
    </insert>

    <select id="findFinishChunk" resultType="int">
        select chunk from xh_web_comm_file_tmp where md5 = #{md5}
    </select>

    <select id="findFileTmp" resultType="CommonFileTmp">
        select * from xh_web_comm_file_tmp where md5 = #{md5}
    </select>

    <select id="countFinish" resultType="int">
        select count(*) from xh_web_comm_file_tmp where md5 = #{md5}
    </select>

    <select id="isExist" resultType="boolean">
        select if(count(*)>0,1,0) from xh_web_comm_file_tmp where md5 = #{md5} and chunk = #{chunk}
    </select>

    <delete id="delByParamOfHard">
        delete from xh_web_comm_file_tmp where md5 = #{param.md5}
    </delete>

</mapper>